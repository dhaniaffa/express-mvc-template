# Server configuration
PORT=3000

# NODE_ENV: development | production
NODE_ENV=development

# Logger configuration
# LOG_LEVEL: error, warn, info, http, debug
#   - default in development: debug
#   - default in production: warn
LOG_LEVEL=debug

# LOG_ENABLE_STACK: whether to include stack traces in logs (true/false)
LOG_ENABLE_STACK=true

# LOG_ROTATION_STRATEGY: none | daily | size
#   - none : no rotation (useful for forwarding logs to stdout)
#   - daily: rotate logs every day (winston-daily-rotate-file)
#   - size : rotate when file reaches LOG_MAX_SIZE (built-in file transport)
LOG_ROTATION_STRATEGY=daily

# LOG_MAX_DAYS: how many days to keep rotated logs (used by daily rotate)
LOG_MAX_DAYS=30

# LOG_MAX_SIZE: maximum size before rotating (e.g. 10m, 5m)
LOG_MAX_SIZE=10m

# LOG_ZIP_ARCHIVE: whether to gzip rotated files (true/false)
LOG_ZIP_ARCHIVE=true

# Directory to write logs when using file transports
LOG_DIR=logs

# Whether to prettify logs
LOG_PRETTY=false
