{
  "name": "express-mvc-pattern",
  "description": "A Template for Express.js projects using TypeScript, ES module syntax, MVC pattern, services, and DTOs. Includes ESLint and Prettier for code quality.",
  "repository": "https://github.com/dhaniaffa/express-mvc-template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Dhaniaffa Adhimastama Mahadika",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
